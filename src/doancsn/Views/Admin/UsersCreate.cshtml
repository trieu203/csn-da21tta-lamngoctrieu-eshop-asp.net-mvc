@model doancsn.Models.User

@{
    ViewData["Title"] = "UsersCreate";
    Layout = "_Admin";
}

<h1>Tạo mới</h1>

<h4>Tài khoản</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UsersCreate" asp-controller="Admin">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Tên người dùng</label>
                <div>
                    <input type="fname" class="form-control" placeholder="Nhập tên người dùng" id="fnamw" />
                </div>
                
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email</label>
                <div>
                    <input type="femail" class="form-control" placeholder="Nhập email" id="femail" />
                </div>
                
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Password</label>
                <div>
                    <input type="fpas" class="form-control" id="fpas" placeholder="Nhập passwoed" name="fpas" />
                </div>
                
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Role" class="control-label">Vai trò</label>
                <div>
                    <input type="frole" class="form-control" id="frole" placeholder="Nhập vai trò" name="frole" />
                </div>
                
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <div>
                <h1></h1>
            </div>
            <div class="form-group">
                <input type="submit" value="Tạo mới" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <h1></h1>
</div>
<div>
    <a asp-action="UsersIndex">Quay lại</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}