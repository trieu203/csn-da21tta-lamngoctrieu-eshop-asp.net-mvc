@{
}
@model doancsn.Models.Discount

@{
    ViewData["Title"] = "Create";
    Layout = "_Admin";
}


<div class="row">
    <div class="col-md-4">
        <form asp-action="DiscountsCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label">Tên mã giảm giá</label>
                <div class="col-sm-10">
                    <input type="fname" class="form-control" id="fname" name="fname">
                </div>

                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Amout" class="control-label">Số tiền giảm</label>
                <div class="col-sm-10">
                    <input type="fame" class="form-control" id="fame" name="fame">
                </div>

                <span asp-validation-for="Amout" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Code" class="control-label">Mã giảm giá</label>
                <div class="col-sm-10">
                    <input type="fame" class="form-control" id="fame" name="fame">
                </div>
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="StartDay" class="control-label">Ngày bắt đầu</label>
                <div class="col-sm-10">
                    <input type="fame" class="form-control" id="fame" name="fame">
                </div>
                <span asp-validation-for="StartDay" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EndDay" class="control-label">Ngày kết thúc</label>
                <div class="col-sm-10">
                    <input type="fame" class="form-control" id="fame" name="fame">
                </div>
                <span asp-validation-for="EndDay" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Tạo mới" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="DiscountsIndex">Quay lại</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
