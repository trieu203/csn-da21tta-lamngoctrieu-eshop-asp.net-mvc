@model doancsn.Models.Product

@{
    ViewData["Title"] = "Tạo mới sản phẩm";
    Layout = "_Admin";
}


<div class="row">
    <div class="col-md-4">
        <form asp-action="ProductsCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Tên sản phẩm</label>
                <div>
                    <input type="fname" class="form-control" id="fname" placeholder="Nhập tên sản phẩm" name="fname">
                </div>
                
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Mô tả sản phẩm</label>
                <div class="col-sm-10">
                    <input type="fid" class="form-control" id="fid" placeholder="Nhập mô tả" name="fid">
                </div>
               
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl" class="control-label">Hình ảnh</label>
                <div class="col-sm-10">
                    <input type="fimg" class="form-control" id="fid" placeholder="Hình ảnh" name="fimg">
                </div>
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Giá</label>
                <div class="col-sm-10">
                    <input type="fpice" class="form-control" id="fid" placeholder="Nhập giá" name="fpice">
                </div>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewPrice" class="control-label">Giá mới</label>
                <div class="col-sm-10">
                    <input type="fnew" class="form-control" id="fid" placeholder="Nhập giá mới" name="fnew">
                </div>
                <span asp-validation-for="NewPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label">Số lượng</label>
                <div class="col-sm-10">
                    <input type="fqua" class="form-control" id="fid" placeholder="Nhập số lượng" name="fqua">
                </div>
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsNew" /> @Html.DisplayNameFor(model => model.IsNew)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsBestSeller" /> @Html.DisplayNameFor(model => model.IsBestSeller)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsSale" /> @Html.DisplayNameFor(model => model.IsSale)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"> Danh mục sản phẩm</label>
                <div class="col-sm-10">
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="DiscountId" class="control-label">Khuyến mãi</label>
                <div class="col-sm-10">
                    <select asp-for="DiscountId" class="form-control" asp-items="ViewBag.DiscountId"></select>
                </div>
                
            </div>
            <div class="form-group">
                <div class="col-sm-10">
                    <input type="submit" value="Tạo mới" class="btn btn-primary" />
                </div>
                
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ProductsIndex">Quay lại</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
