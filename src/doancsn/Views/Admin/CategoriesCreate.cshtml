
@model doancsn.Models.Category

@{
    ViewData["Title"] = "Create";
    Layout = "_Admin";
}

<h1>Tạo mới</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CategoriesCreate">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group">
                <label asp-for="Name" class="control-label">Sản phẩm</label>
                <div class="col-sm-10">
                    <input type="fname" class="form-control" id="fname" name="fname">
                </div>
                
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Tạo mới" class="btn btn-primary" />
            </div>

        </form>


    </div>
</div>

<div>
    <a asp-action="CategoriesIndex">Quay lại</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
