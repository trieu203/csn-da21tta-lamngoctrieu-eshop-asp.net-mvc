@{
    Layout = "_Form";
}

@model Cart

<!-- Cart Start -->
<div class="container-fluid pt-5">
    <div class="row px-xl-5">
        <div class="col-lg-8 table-responsive mb-5">
            <table class="table table-bordered text-center mb-0">
                <thead class="bg-secondary text-dark">
                    <tr>
                        <th>Sản phẩm</th>
                        <th>Giá</th>
                        <th>Số lượng</th>
                        <th>Tổng tiền</th>
                        <th>Xóa</th>
                    </tr>
                </thead>
                <tbody class="align-middle">
                    @if (Model?.Lines != null)
                    {
                        @foreach (var line in Model?.Lines)
                        {
                            if (line != null && line.Product != null)
                            {

                                <tr>
                                    <td class="align-middle"><img src="@line.Product.ImageUrl" alt="" style="width: 50px;">@line.Product.Name</td>
                                    <td class="align-middle">@line.Product.NewPrice</td>
                                    <td class="align-middle">
                                        <div class="input-group quantity mx-auto" style="width: 100px;">
                                            <div class="input-group-btn">
                                                <a href="/Cart/UpdateCart/?Id=@line.Product.Id" class="btn btn-sm btn-primary btn-minus">
                                                    <i class="fa fa-minus"></i>
                                                </a>
                                            </div>
                                            <input type="text" class="form-control form-control-sm bg-secondary text-center" value="@line.Quantity">
                                            <div class="input-group-btn">
                                                <a href="/Cart/AddToCart/?Id=@line.Product.Id" class="btn btn-sm btn-primary btn-plus">
                                                    <i class="fa fa-plus"></i>
                                                </a>
                                            </div>
                                        </div>
                                    </td>

                                    <td class="align-middle">@(line.Product.NewPrice * line.Quantity) VND</td>
                                    <td class="align-middle"><a href="/Cart/RemoveFromCart/?Id=@line.Product.Id" class="btn btn-sm btn-primary"><i class="fa fa-times"></i></a></td>
                                </tr>
                            }
                        }
                    }
                </tbody>
            </table>
        </div>
        <div class="col-lg-4">

            <div class="card border-secondary mb-5">
                <div class="card-header bg-secondary border-0">
                    <h4 class="font-weight-semi-bold m-0">Tóm tắt đơn hàng</h4>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-3 pt-1">
                        <h6 class="font-weight-medium">Tổng phụ</h6>
                        <h6 class="font-weight-medium">@Model.ComputeTotalValue() VND</h6>
                    </div>
                    <div class="d-flex justify-content-between">
                        <h6 class="font-weight-medium">Tiền ship</h6>
                        <h6 class="font-weight-medium">5000 VND</h6>
                    </div>
                </div>
                <div class="card-footer border-secondary bg-transparent">
                    <div class="d-flex justify-content-between mt-2">
                        <h5 class="font-weight-bold">Tổng tièn</h5>
                        <h5 class="font-weight-bold">@(Model.ComputeTotalValue() + 5000) VND</h5>
                    </div>
                    <button class="btn btn-block btn-primary my-3 py-3">Thanh toán</button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Cart End -->